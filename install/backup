#!/bin/bash

# uncomment for debug
#set -x

# can be added to by editing this file
SYNC_OPTS="-urpq"

# can be changed with '-e' option
ERR_FILE="backup_errs.log"

# src location
SRC=""

# dest location
DEST=""

error_trig() {
	printf "%s\n" "$1" 1>&2
	exit 1
}

backup() {
	printf "%s\n" "Running backup..."
	rsync $SYNC_OPTS "$SRC" "$DEST" 2> $ERR_FILE 
	if [[ ! "$?" = "0" ]]; then
		# something went wrong
		error_trig "Error occurred while backing up. Check messages in $ERR_FILE"
	fi
}

make_dir() {
	while true; do
		read -p "$DEST doesn't exist, create it? [Y/n] " yn
		case $yn in
			[Yy])
				mkdir -p "$DEST"
				break
				;;
			[Nn])
				error_trig "Please create destination dir and try again."
				;;
			*)
				printf "%s\n" "Please enter [Yy] or [Nn]"
				;;
		esac
	done
}

check_dirs() {
	if [[ -e "$SRC" ]]; then
		if [[ ! -e "$DEST" ]]; then
			make_dir "$DEST"
		fi
	else
		error_trig "Error: $SRC doesn't exist."
	fi
}

do_backup_with_args() {	
	check_dirs
}

do_backup_wo_args() {
	read -p 'Source: ' SRC
	read -p 'Destination: ' DEST
	
	check_dirs
}

usage() {
	printf "%s\n" "Usage: backup [OPTIONS]"
	printf "%s\n" "Examples:         backup -e err_file.txt -v"
	printf "%s\n" "                  backup"
	printf "%s\n" "Options:"
	printf "%s\n" "-s, --src                     Source directory."
	printf "%s\n" "-d, --dest                    Destination directory."
	printf "%s\n" "-h, --help                    Print this help."
	printf "%s\n" "-e, --err_file err_file.txt   Output errors to the provided file."
	printf "%s\n" "-v, --verbose                 Turns on verbose logging."
}

get_args() {
	if [[ $# -eq 0 ]]; then
		do_backup_wo_args
	else
		while [[ "$1" != "" ]]; do
			case "$1" in
				-h | --help)
					usage
					exit
					;;
				-e | --err_file)
					shift
					ERR_FILE="$1"
					;;
				-v | --verbose)
					SYNC_OPTS="-urpv"
					;;
				-s | --src)
					shift
					SRC="$1"
					;;
				-d | --dest)
					shift
					DEST="$1"
					;;
			esac
			shift
		done
	fi
}

main() {
	get_args "$@"
	
	if [[ "$SRC" = "" || "$DEST" = "" ]]; then
		do_backup_wo_args
	else
		do_backup_with_args
	fi
	
	# no errors at this point, do backup
	backup

	printf "\n%s\n" "Success!"
}

main "$@"
